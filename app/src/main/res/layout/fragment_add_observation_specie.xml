<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.recyclerview.widget.RecyclerView
        android:theme="@style/Light"
            android:id="@+id/addObservationSpecieFragment_recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="16dp"
            android:paddingTop="66dp"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <com.noque.svampeatlas.views.SearchBarView
            android:layout_width="0dp"
            android:layout_height="@dimen/searchbar_view_height"
            android:id="@+id/addObservationSpecieFragment_searchBarView"
            android:layout_marginTop="@dimen/searchbar_top_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <com.noque.svampeatlas.views.BackgroundView
        android:id="@+id/addObservationSpecieFragment_backgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>