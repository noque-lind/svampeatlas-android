<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorSecondary"
    android:theme="@style/Light"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/promptFragment_titleTextView"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        style="@style/AppTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/promptFragment_messageTextView"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        style="@style/AppPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textAppearance="@style/AppPrimaryHighlighted"
            android:textColor="@color/colorWhite"
            android:id="@+id/promptFragment_positiveButton"
            android:background="@color/colorGreen"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textAppearance="@style/AppPrimaryHighlighted"
            android:textColor="@color/colorWhite"
            android:id="@+id/promptFragment_negativeButton"
            android:background="@color/colorRed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

    </LinearLayout>





</LinearLayout>