<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/searchBar_root"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
                android:id="@+id/searchBar_editText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="visible"
                android:inputType="text"
                style="@style/AppPrimaryHighlighted.Light"
                android:hint="SÃ¸g efter en art her.."
                android:textColorHint="@color/colorWhite_dimmed"
                android:paddingStart="60dp"
                android:maxLines="1"
                android:imeOptions="actionSearch"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/searchBar_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:autoText="false"/>

        <ImageButton
                android:id="@+id/searchBar_button"
                android:elevation="1dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                android:background="@drawable/circle_view"
                android:src="@android:drawable/ic_search_category_default"/>

</androidx.constraintlayout.widget.ConstraintLayout>