<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:id="@+id/resultView_imageView"
            android:layout_width="100dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"/>

    <LinearLayout
            android:id="@+id/resultView_linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@id/resultView_imageView"
            android:orientation="vertical">

        <TextView
                android:id="@+id/resultView_primaryLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/AppPrimaryHighlighted.Dark"
        />

        <Space
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

        <TextView
                android:id="@+id/resultView_secondaryLabel"
                android:layout_width="match_parent"
                style="@style/AppPrimary.Dark"
                android:layout_height="wrap_content"
                android:gravity="center"/>

        <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>