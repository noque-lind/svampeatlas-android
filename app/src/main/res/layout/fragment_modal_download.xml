<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorSecondary"
    android:theme="@style/Light"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/downloaderFragment_titleTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        style="@style/AppTitle"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="32dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
      />

    <TextView
        android:id="@+id/downloaderFragment_messageTextView"
        app:layout_constraintTop_toBottomOf="@id/downloaderFragment_titleTextView"
        android:layout_marginTop="8dp"
        style="@style/AppPrimary"
        android:textAlignment="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <com.noque.svampeatlas.views.BackgroundView
        android:id="@+id/downloaderFragment_errorView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/downloaderFragment_messageTextView"/>
</androidx.constraintlayout.widget.ConstraintLayout>