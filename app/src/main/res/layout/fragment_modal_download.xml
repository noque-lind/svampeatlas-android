<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorSecondary"
    android:theme="@style/Light"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/downloaderFragment_titleTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        style="@style/AppTitle"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="32dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
      />

    <com.noque.svampeatlas.views.BackgroundView
        android:id="@+id/downloaderFragment_errorView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/downloaderFragment_titleTextView"/>

    <ProgressBar
        android:id="@+id/downloaderFragment_progressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/downloaderFragment_titleTextView" />

    <TextView
        android:id="@+id/downloaderFragment_messageTextView"
        app:layout_constraintTop_toBottomOf="@id/downloaderFragment_progressBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="32dp"
        style="@style/AppPrimary"
        android:textAlignment="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</androidx.constraintlayout.widget.ConstraintLayout>