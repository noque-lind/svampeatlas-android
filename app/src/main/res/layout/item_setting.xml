<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="50dp">


    <ImageView
            android:id="@+id/settingItem_iconImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            />

    <TextView
            android:id="@+id/settingItem_titleTextView"
            style="@style/AppPrimaryHighlighted.Light"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@+id/settingItem_iconImageView"
            app:layout_constraintEnd_toStartOf="@id/settingItem_contentTextView"/>

    <TextView
            android:id="@+id/settingItem_contentTextView"
            style="@style/AppPrimaryHighlighted.Light"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CONTENT"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/settingItem_titleTextView"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>