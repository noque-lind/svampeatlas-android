<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:theme="@style/Light"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        app:title="@string/aboutFragment"
        app:elevation="0dp"
        android:id="@+id/mushroomFragment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/icon_menu_button"/>

    <ScrollView
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/sponsors_ku" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/sponsors_aagevjensen" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/sponsors_svampekundskabens" />

            <TextView
                android:id="@+id/textView2"
                style="@style/AppPrimary"
                android:layout_marginTop="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aboutFragment_aboutText"
                android:textAlignment="viewStart" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>