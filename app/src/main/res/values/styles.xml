<resources>

    
    <declare-styleable name="AppTheme">
        <attr name="AppPrimary.Light" format="reference"/>
        <attr name="AppPrimary.Dark" format="reference"/>
    </declare-styleable>
    
    
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorThird</item>
    <item name="colorControlNormal">@color/colorWhite</item>
        <!--<item name="AppPrimary.Light">@style/AppPrimary</item>-->
        <!--<item name="AppPrimary.Dark">@style/AppPrimary.Dark</item>-->
    </style>

    <style name="Light">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Dark">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/avenir_next</item>
    </style>

    <style name="AppPrimary">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/avenir_next</item>
    </style>

    <style name="AppSmall">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">9sp</item>
        <item name="color">@color/colorThird</item>
        <item name="android:font">@font/avenir_text_ultra_light</item>
    </style>

    <style name="AppPrimaryHighlighted">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/avenir_next</item>
    </style>

    <style name="AppDivider">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/caviar_dreams</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppSwitch" >
        <item name="android:colorControlNormal">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/colorGreen</item>
    </style>

    <style name="DatePicker" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorControlActivated">@color/colorThird</item>
        <item name="colorAccent">@color/colorPrimary</item>

    </style>

</resources>
